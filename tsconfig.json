// see: http://json.schemastore.org/tsconfig
{
    "compilerOptions": {
        "sourceMap": true,
        // DEVNOTE: 2019-5-12 - for test (/* istanbul ignore <type> */)
        "removeComments": false,

        // "declaration": true,
        // "declarationDir": "./bin",

        // statistics
        "diagnostics": true,
        // "inlineSourceMap": true,
        // "inlineSources": true,
        // Stylize errors and messages using color and context (experimental).
        "pretty": true,

        "rootDir": "./src/ts",
        "outDir": "./bin",

        "listFiles": false,
        "newLine": "LF",

        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",

        "noEmitHelpers": false,

        // "alwaysStrict": true,
        "strict": true,

        // "allowJs": true,
        // "checkJs": true,

        // NOTE: test use.
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/gulp-rm-cmts.ts"
    ]
}