{
    "compilerOptions": {
        "sourceMap": false,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "/\/.*[^\\\r\n](?=\/)\/[gimuysx]*/ginvalid quote string?",
        "diagnostics": null,
        "pretty": "`s`",
        "rootDir": "/[\r\n]+/",
        "outDir": "./js/[\r\n]+/**/\\",
        "listFiles": "",
        "newLine": "/LF/m",
        "target": "es6",
        "module": "",
        "noEmitHelpers": false,
        "typeRoots": [
            "tools",
            "node_modules/@types\\/"
