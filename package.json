{
    "name": "rm-cstyle-cmts",
    "version": "1.4.19",
    "description": "remove c style comments from text file(javascript source, json file etc...",
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "scripts": {
        "lint": "tslint src/**/*.ts -p tsconfig.json --type-check",
        "test": "istanbul cover test/test.js && codecov -f coverage/*.json",
        "bench": "node -v && node ./bin/bench/ -f samples/es6.js -l 2000 -ol 10 | node ./bin/bench/ -p",
        "build": "gulp rm:nullfile",
        "dist": "gulp dist && npm publish ./dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeffy-g/rm-cstyle-cmts.git"
    },
    "keywords": [
        "remove",
        "delete",
        "comment",
        "comments",
        "javascript",
        "strip",
        "json",
        "text"
    ],
    "engines": {
        "node": ">=4.8.4"
    },
    "author": "jeffy-g",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/node": "^8.0.26",
        "codecov": "^2.3.0",
        "del": "^3.0.0",
        "gulp": "^3.9.1",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^0.6.1",
        "gulp-typescript": "^3.2.2",
        "istanbul": "^0.4.5",
        "nyc": "^11.2.1",
        "typescript": "^2.5.2"
    }
}
