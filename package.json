{
    "name": "rm-cstyle-cmts",
    "version": "1.4.24",
    "description": "remove c style comments from text file(javascript source, json file etc...",
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "typings": "./bin/index.d.ts",
    "scripts": {
        "lint": "tslint src/**/*.ts -p tsconfig.json --project",
        "test": "istanbul cover test/test.js && remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
        "bench": "node -v && node ./bin/bench/ -f samples/es6.js -l 2000 -ol 10 | node ./bin/bench/ -p",
        "bench:cov": "istanbul cover ./bin/bench/ -- -f samples/es6.js -l 2000 -ol 10 && remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
        "build": "gulp rm:nullfile",
        "dist": "gulp dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeffy-g/rm-cstyle-cmts.git"
    },
    "keywords": [
        "remove",
        "delete",
        "comment",
        "comments",
        "javascript",
        "strip",
        "json",
        "text"
    ],
    "engines": {
        "node": ">=4.8.4"
    },
    "author": "jeffy-g",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/node": "^10.9.4",
        "awesome-typescript-loader": "^5.2.1",
        "codecov": "^3.1.0",
        "del": "^3.0.0",
        "gulp": "^4.0.0",
        "gulp-rename": "^1.4.0",
        "gulp-replace": "^1.0.0",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-typescript": "^5.0.0-alpha.3",
        "istanbul": "^0.4.5",
        "remap-istanbul": "^0.11.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack-stream": "^5.1.1"
    }
}
