{
    "name": "rm-cstyle-cmts",
    "version": "1.6.2",
    "description": "remove c style comments from text file(javascript source, json file etc...",
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "typings": "./bin/index.d.ts",
    "scripts": {
        "lint": "tslint src/**/*.ts -p tsconfig.json --project",
        "test": "bash -c \"if [ ! -e test/test.js ]; then tsc ./test/test.ts --sourcemap true; fi\" && istanbul cover test/test.js && remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
        "bench": "node -v && node ./bin/bench/ -f samples/es6.js -l 2000 -ol 10 | node ./bin/bench/ -p",
        "bench2": "node -v && bash ./scripts/extra-bench.sh",
        "bench:cov": "istanbul cover ./bin/bench/ -- -f samples/es6.js -l 2000 -ol 10 && remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
        "build": "gulp rm:nullfile",
        "dist": "gulp dist:pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeffy-g/rm-cstyle-cmts.git"
    },
    "keywords": [
        "remove",
        "delete",
        "comment",
        "comments",
        "javascript",
        "strip",
        "json",
        "text"
    ],
    "engines": {
        "node": ">=8.4.0"
    },
    "author": "jeffy-g",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/node": "^12.0.0",
        "codecov": "^3.3.0",
        "colors": "^1.3.3",
        "del": "^4.1.0",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.2.0",
        "gulp-rename": "^1.4.0",
        "gulp-replace": "^1.0.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-typescript": "^5.0.1",
        "istanbul": "^0.4.5",
        "remap-istanbul": "^0.13.0",
        "terser-webpack-plugin": "^1.2.3",
        "ts-loader": "^6.0.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "webpack-stream": "^5.1.1"
    }
}
